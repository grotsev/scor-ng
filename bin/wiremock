#!/bin/bash

mkdir -p build/wiremock
cp -upr wiremock/mappings build/wiremock
cp -upr wiremock/__files  build/wiremock

export GUID="GUID-001-004-004~GR1"
export ACCOUNT=admin
export TAB_NUMBER=1
envsubst < wiremock/template/acs/access-success.json > build/wiremock/mappings/acs/access-admin.json

export ACCOUNT=blocked
envsubst < wiremock/template/acs/access-blocked.json > build/wiremock/mappings/acs/access-blocked.json

java -jar opt/wiremock-standalone-2.11.0.jar --root-dir build/wiremock --no-request-journal
